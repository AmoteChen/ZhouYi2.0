<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zd_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/zd_ok"
            android:text="取消" />
        <Button
            android:id="@+id/zd_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="确定" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="4.7" android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="1" android:layout_marginTop="40dp">
            <RadioGroup
                android:id="@+id/top_total"
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/zd_total_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/zd_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="000000"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/zd_total_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/zd_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="000000"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent" android:layout_height="0dp"
            android:layout_weight="0.6" android:orientation="horizontal"
            android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="6" android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="3" android:orientation="vertical">
            <Button
                android:id="@+id/shanggua_view"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/zd_selector"
                android:layout_margin="4dp"/>
            <Button
                android:id="@+id/xiagua_view"
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/zd_selector"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="8" android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1" android:orientation="vertical">
            <RadioGroup
                android:id="@+id/sg_group_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/sg_1_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="000"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/sg_1_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="001"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/sg_1_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="010"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/sg_1_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="011"
                        android:textSize="14sp" />
            </RadioGroup>
                <RadioGroup
                        android:id="@+id/sg_group_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <RadioButton
                            android:id="@+id/sg_2_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/zd_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="100"
                            android:textSize="14sp" />
                        <RadioButton
                            android:id="@+id/sg_2_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/zd_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="101"
                            android:textSize="14sp" />
                        <RadioButton
                            android:id="@+id/sg_2_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/zd_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="110"
                            android:textSize="14sp" />
                        <RadioButton
                            android:id="@+id/sg_2_4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="4dp"
                            android:background="@drawable/zd_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="111"
                            android:textSize="14sp" />
                    </RadioGroup>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1" android:orientation="vertical">
            <RadioGroup
                android:id="@+id/xg_group_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/xg_1_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="000"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_1_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="001"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_1_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="010"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_1_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="011"
                        android:textSize="14sp" />
            </RadioGroup>

                <RadioGroup
                    android:id="@+id/xg_group_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/xg_2_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="100"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_2_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="101"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_2_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="110"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/xg_2_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/zd_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:text="111"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>