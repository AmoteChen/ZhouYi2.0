<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Zhouyi_fragment">

    <include layout="@layout/main_item_jump" />

    <example.com.zhouyi_20.tool.CustomViewPager
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"></example.com.zhouyi_20.tool.CustomViewPager>

    <LinearLayout
        android:id="@+id/main_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/main_top_layout"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/main_bt_zhouyi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/bottom_zhanbu_no" />

        <ImageView
            android:id="@+id/main_bt_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/bottom_lishi_no" />

        <ImageView
            android:id="@+id/main_bt_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:src="@drawable/bottom_wode_no" />
    </LinearLayout>

</LinearLayout>