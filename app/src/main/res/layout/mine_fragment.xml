<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebef"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_blur"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/iv_blur"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
        </RelativeLayout>
    </RelativeLayout>
    <example.com.zhouyi_20.activity.mine.item_view
        android:id="@+id/info_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        zsg:show_login="false"
        zsg:show_leftimg="@drawable/shoucang"
        zsg:show_text="个人信息"
        />

    <example.com.zhouyi_20.activity.mine.item_view
        android:id="@+id/offline_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        zsg:show_login="false"
        zsg:show_leftimg="@drawable/xiazai"
        zsg:show_text="离线缓存"
        />

    <example.com.zhouyi_20.activity.mine.item_view
        android:id="@+id/about_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        zsg:show_login="true"
        zsg:show_leftimg="@drawable/about"
        zsg:show_text="关于"
        />
    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dc514e"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="退出登陆"
        android:textSize="20sp"
        android:textColor="@color/white" />
</LinearLayout>