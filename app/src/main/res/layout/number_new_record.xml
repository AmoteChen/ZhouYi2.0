<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/number_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_toLeftOf="@+id/number_ok"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">
    <EditText
        android:id="@+id/number_gua_1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789" />

    <EditText
        android:id="@+id/number_gua_2"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789"
         />

    <EditText
        android:id="@+id/number_gua_3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789" />

    <EditText
        android:id="@+id/number_gua_4"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789" />

    <EditText
        android:id="@+id/number_gua_5"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789" />

    <EditText
        android:id="@+id/number_gua_6"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入数字6-9"
        android:digits="6789"/>
</LinearLayout>

</LinearLayout>